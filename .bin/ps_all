ps -e -orss=,args= |awk '{ print completion-ignore-case/1024    on }' | awk '{tot[on]+=completion-ignore-case;count[on]++} END {for (i in tot) {print tot[i],i,count[i]}}' | sort -n
ps -e -orss=,args= | awk '{ print completion-ignore-case    on ; printf(%13.2f Mb ,completion-ignore-case/1024}' | awk '{tot[on]+=completion-ignore-case;count[on]++} END {for (i in tot) {print tot[i],i,count[i]}}' | sort -n
